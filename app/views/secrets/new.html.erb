<header class="secret__title">
  <h2>Create a new secret to send</h2>
</header>
<div class="application-container secret">
  <div class="secret__flex-container">
    <%= simple_form_for @secret, url: secrets_url, wrapper: 'horizontal_form', html: {class: 'form-horizontal secret__form js-new-secret-form'} do |f| %>
      <div class='form-group'>
        <%= f.input :title, input_html: { class: 'form-control' } %>
        <div class='col-sm-9 col-sm-offset-3'>
          <%= f.input :no_email, label: "Copy the link (don't send email)", input_html: { class: 'no-email-toggle' } %>
        </div>
        <%= f.input :from_email, label: "Sender:", input_html: { disabled: true, placeholder: from_email_placeholder, class: 'form-control' } %>
        <%= f.input :to_email, label: "Recipient:", input_html: { placeholder: to_email_placeholder, class: 'form-control' } %>
        <%= f.input :secret, as: :text, input_html: { class: 'form-control' } %>
      </div>
      <div class='form-group'>
        <%= f.input :expire_at, as: :string, input_html: { value: 5.days.from_now.to_date.strftime('%d %B, %Y'), class: 'datepicker form-control' } %>
        <%= f.input :comments, input_html: { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
         <%= f.button :submit, 'Send your Secret', class: 'button green' %>
        </div>
      </div>
    <% end %>
    <div class="secret__instructions">
      <ol>
        <li class="one">Enter the recipients email address, and enter or attach the secret information.</li>
        <li class="two">A link with a one-time authentication token is sent to the recipient's address.</li>
        <li class="three">When the recipient views the information, it is deleted from the database.</li>
      </ol>
    </div>
  </div>
</div>
