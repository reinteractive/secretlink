<div class="container secret-container">
  <div class="row">
    <div class="col-sm-12">
      <h2 class="text-center">Create a new secret</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-offset-1 col-sm-6">
      <%= simple_form_for @secret, url: secrets_url do |f| %>
        <%= f.input :title, input_html: { class: 'form-control' } %>
        <%= f.input :to_email, label: "Recipient's email address", input_html: { placeholder: to_email_placeholder(@secret, session[:email]), class: 'form-control' } %>
        <div class='form-group'>
          <%= f.input :secret, as: :text, input_html: { class: 'form-control' } %>
        </div>
  <!-- Hidden until the functionnality is actually implemented
         <div class='form-group'>
          <%= f.file_field :secret_file, input_html: { class: 'form-control' } %>
        </div>
   -->
         <div class='form-group'>
          <%= f.input :comments, input_html: { class: 'form-control' } %>
          <%= f.input :expire_at, as: :string, input_html: { class: 'datepicker form-control', placeholder: Secret.expire_at_hint } %>
        </div>
        <%= f.submit 'Create', class: 'btn btn-default' %>
      <% end %>
    </div>
    <div class="col-sm-offset-1 col-sm-4 instructions-container">
      <h4>Instructions</h4>
      <ol id='instructions'>
        <li class='completed'>
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          Enter your email address and a link with a one-time authentication token will be sent to you.
        </li>
        <li class='completed'>
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          Follow the link to a page where you can view the status of previously shared secrets and share new secrets.
        </li>
        <li>Enter the recipients email address, and enter or attach the secret information.</li>
        <li>A link with a one-time authentication token is sent to the recipient's address.</li>
        <li>When the recipient views the information, it is deleted from the database.</li>
      </ol>
    </div>
  </div>
</div>
